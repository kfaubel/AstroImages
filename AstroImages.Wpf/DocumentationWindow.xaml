<Window x:Class="AstroImages.Wpf.DocumentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AstroImages Documentation" Height="600" Width="800"
        MinWidth="600" MinHeight="400" 
        Icon="icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Documentation Content -->
        <FlowDocumentScrollViewer Name="DocumentViewer" Grid.Row="0" Margin="10">
            <FlowDocument Name="DocumentContent" FontFamily="Segoe UI" FontSize="12">
                <!-- Content will be loaded dynamically -->
            </FlowDocument>
        </FlowDocumentScrollViewer>
        
        <!-- Close Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Close" Width="80" Height="30" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>