<Window x:Class="AstroImages.Wpf.GetStartedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Get Started with AstroImages" 
        Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">
    <Grid Background="{DynamicResource ThemeWindowBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Get Started" 
                   FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource ThemeForeground}"
                   Margin="20,20,20,10"/>

        <!-- Message -->
        <StackPanel Grid.Row="1" Margin="20,10,20,20" VerticalAlignment="Center">
            <TextBlock Text="To get started, select File â†’ Open Folder,&#x0a;or click the Open Folder button below"
                       FontSize="14"
                       Foreground="{DynamicResource ThemeForeground}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="20,10,20,20">
            <Button Name="OpenFolderButton" Content="Open Folder" 
                    Width="120" Height="40" Margin="0,0,10,0"
                    Click="OpenFolderButton_Click"
                    Background="#3f51b5" Foreground="White" 
                    BorderThickness="0" FontSize="13" FontWeight="Medium"
                    Cursor="Hand">
            </Button>
            
            <Button Name="CancelButton" Content="Cancel" 
                    Width="90" Height="40"
                    Click="CancelButton_Click"
                    Background="{DynamicResource ThemeButtonBackground}" 
                    Foreground="{DynamicResource ThemeForeground}"
                    BorderThickness="1" BorderBrush="{DynamicResource ThemeBorderBrush}"
                    FontSize="13" Cursor="Hand">
            </Button>
        </StackPanel>
    </Grid>
</Window>
