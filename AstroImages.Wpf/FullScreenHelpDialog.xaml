<Window x:Class="AstroImages.Wpf.FullScreenHelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Full Screen Mode Help" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeWindowBackground}"
        Foreground="{DynamicResource ThemeForeground}"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Full Screen Mode Controls" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>ESC</Bold> - Exit full screen mode
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Right Arrow</Bold> - Go to next image
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Left Arrow</Bold> - Go to previous image
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Space Bar</Bold> - Toggle selection checkbox for current image
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Up Arrow</Bold> - Zoom in
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Down Arrow</Bold> - Zoom out
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Mouse Wheel</Bold> - Zoom in/out
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>F Key</Bold> - Fit image to window
                </TextBlock>
                <TextBlock TextWrapping="Wrap" Margin="0,5">
                    <Bold>Left Mouse Button</Bold> - Click and drag to pan the image (when zoomed in)
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <CheckBox Grid.Row="2" x:Name="DontShowAgainCheckBox" 
                  Content="Don't show this help dialog again" 
                  Margin="0,15,0,0"/>

        <Button Grid.Row="3" Content="OK" Width="80" Height="30" 
                HorizontalAlignment="Right" Margin="0,15,0,0"
                IsDefault="True" Click="OK_Click"/>
    </Grid>
</Window>
