<Window x:Class="AstroImages.Wpf.MoveFilesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Move Selected Files" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" 
        Icon="icon.ico">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Files to move summary -->
        <TextBlock Grid.Row="0" Text="Operation:" FontWeight="Bold" Margin="0,0,0,10"/>
        <ScrollViewer Grid.Row="1" MaxHeight="120" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="FilesListControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="0,2" FontSize="14" FontWeight="Medium"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Move options -->
        <GroupBox Grid.Row="2" Header="Move Options" Margin="0,15,0,10">
            <StackPanel Margin="10">
                <RadioButton Name="MoveToDirectoryRadio" Content="Move to directory:" IsChecked="True" Margin="0,5"/>
                <Grid Margin="20,5,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="DirectoryTextBox" Grid.Column="0" IsEnabled="{Binding IsChecked, ElementName=MoveToDirectoryRadio}" 
                             Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <Button Name="BrowseButton" Grid.Column="1" Content="Browse..." Width="80" 
                            IsEnabled="{Binding IsChecked, ElementName=MoveToDirectoryRadio}" Click="BrowseButton_Click"/>
                </Grid>
                <RadioButton Name="MoveToTrashRadio" Content="Move to Recycle Bin" Margin="0,5"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Margin="0,0,10,0" 
                    IsDefault="True" Click="Ok_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" 
                    IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>