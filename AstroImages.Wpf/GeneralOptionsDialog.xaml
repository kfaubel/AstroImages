<Window x:Class="AstroImages.Wpf.GeneralOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="General Options" Width="400"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize" 
        Icon="icon.ico"
        Background="{DynamicResource ThemeWindowBackground}"
        Foreground="{DynamicResource ThemeForeground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- File List Options -->
        <GroupBox Grid.Row="0" Header="File List Options" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox Name="ShowSizeColumnCheckBox" 
                         Content="Show size in the file list" 
                         Margin="0,5"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Theme Options -->
        <GroupBox Grid.Row="1" Header="Theme" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Label Content="Select theme:" Margin="0,0,0,5"/>
                <ComboBox Name="ThemeComboBox" Margin="0,0,0,10">
                    <ComboBoxItem Content="Auto (OS setting)" Tag="Auto"/>
                    <ComboBoxItem Content="Light" Tag="Light"/>
                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>
        
        <!-- Full Screen Options -->
        <GroupBox Grid.Row="2" Header="Full Screen" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <CheckBox Name="ShowFullScreenHelpCheckBox" 
                         Content="Show help dialog when entering full screen mode" 
                         Margin="0,5"/>
            </StackPanel>
        </GroupBox>
        
        <!-- Play Options -->
        <GroupBox Grid.Row="3" Header="Play Options" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <Label Content="Pause between images (seconds):" Margin="0,0,0,5"/>
                <ComboBox Name="PlayPauseIntervalComboBox" Margin="0,0,0,10">
                    <ComboBoxItem Content="0.25 seconds" Tag="0.25"/>
                    <ComboBoxItem Content="0.5 seconds" Tag="0.5"/>
                    <ComboBoxItem Content="1.0 second" Tag="1.0"/>
                    <ComboBoxItem Content="1.5 seconds" Tag="1.5"/>
                    <ComboBoxItem Content="2.0 seconds" Tag="2.0"/>
                    <ComboBoxItem Content="4.0 seconds" Tag="4.0"/>
                    <ComboBoxItem Content="8.0 seconds" Tag="8.0"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>
        
        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="OkButton" Content="OK" Width="75" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="75" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>