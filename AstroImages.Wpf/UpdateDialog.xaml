<Window x:Class="AstroImages.Wpf.UpdateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Available" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        Icon="icon.ico"
        ResizeMode="NoResize"
        Background="{DynamicResource ThemeWindowBackground}"
        Foreground="{DynamicResource ThemeForeground}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Image Source="icon.ico" Width="32" Height="32" Margin="0,0,10,0"/>
            <StackPanel>
                <TextBlock Text="Update Available" FontSize="18" FontWeight="Bold" Foreground="#2E7D32"/>
                <TextBlock x:Name="VersionText" Text="Version X.X.X is available" FontSize="12" Foreground="#666"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Current vs New Version -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Current Version:" FontSize="12" FontWeight="SemiBold" Foreground="#555"/>
                <TextBlock x:Name="CurrentVersionText" Text="2.0.0" FontSize="14" Margin="0,2,0,0"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1">
                <TextBlock Text="Latest Version:" FontSize="12" FontWeight="SemiBold" Foreground="#555"/>
                <TextBlock x:Name="LatestVersionText" Text="2.1.0" FontSize="14" Margin="0,2,0,0" Foreground="#2E7D32"/>
            </StackPanel>
        </Grid>
        
        <!-- Release Notes -->
        <GroupBox Grid.Row="2" Header="What's New" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Border Background="White" BorderBrush="#DDD" BorderThickness="1">
                    <TextBlock x:Name="ReleaseNotesText" Text="Loading release notes..." 
                              TextWrapping="Wrap" Padding="10" FontSize="12"/>
                </Border>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Options -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <CheckBox x:Name="DontAskAgainCheckBox" Content="Don't check for updates automatically" 
                      FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="DownloadButton" Content="Download Update" Width="120" Height="32" 
                    Margin="0,0,10,0" Click="DownloadButton_Click" IsDefault="True"
                    Background="#4CAF50" Foreground="White" BorderThickness="0" 
                    FontWeight="SemiBold" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" Padding="8,4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#66BB6A"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#388E3C"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Name="LaterButton" Content="Later" Width="80" Height="32" 
                    Click="LaterButton_Click" IsCancel="True"
                    Background="#E0E0E0" Foreground="#333" BorderThickness="0" 
                    FontWeight="SemiBold" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" Padding="8,4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#EEEEEE"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#BDBDBD"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>