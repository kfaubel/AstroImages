<Window x:Class="AstroImages.Wpf.FitsKeywordsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FITS Keywords Configuration" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" 
        Icon="icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Select FITS header keywords to display as columns:" 
                   Margin="0,0,0,10"
                   FontWeight="Bold"/>
        
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="KeywordCheckBoxes" 
                          Margin="5">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Keyword}" 
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                  Margin="0,2,0,2"
                                  ToolTip="{Binding Description}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button x:Name="ClearAllButton" 
                    Content="Clear All" 
                    Width="80" 
                    Height="25" 
                    Margin="0,0,10,0"
                    Click="SelectNone_Click"/>
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="25" 
                    Margin="0,0,10,0" 
                    IsDefault="True"
                    Click="Ok_Click"/>
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="25" 
                    IsCancel="True"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>