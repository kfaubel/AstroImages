<Window x:Class="AstroImages.Wpf.AutoSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Auto Select" 
        Height="550" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeWindowBackground}"
        BorderBrush="{DynamicResource ThemeBorderBrush}"
        BorderThickness="1">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message -->
        <TextBlock Grid.Row="0" 
                   Text="All images that match the conditions below will be considered good. All others will be marked in the file list for possible rejection." 
                   FontSize="12"
                   Foreground="{DynamicResource ThemeForeground}"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15"/>

        <!-- Table -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Row -->
            <Border Grid.Row="0" Background="White" Padding="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Keyword" FontWeight="Bold" Foreground="#0073CF" Padding="8,6"/>
                    <TextBlock Grid.Column="1" Text="Minimum" FontWeight="Bold" Foreground="#0073CF" Padding="8,6"/>
                    <TextBlock Grid.Column="2" Text="Maximum" FontWeight="Bold" Foreground="#0073CF" Padding="8,6"/>
                </Grid>
            </Border>

            <!-- Keyword Rows in ScrollViewer -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalAlignment="Stretch">
                <ItemsControl x:Name="KeywordsItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Vertical" IsVirtualizing="False"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,5" Height="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Keyword Name -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Key}" 
                                           Foreground="{DynamicResource ThemeForeground}"
                                           Padding="8,6"
                                           VerticalAlignment="Center"/>

                                <!-- Min Value TextBox -->
                                <TextBox Grid.Column="1"
                                         Text="{Binding MinValue, UpdateSourceTrigger=PropertyChanged}"
                                         Foreground="{DynamicResource ThemeForeground}"
                                         Background="{DynamicResource ThemeTextBoxBackground}"
                                         BorderBrush="{DynamicResource ThemeBorderBrush}"
                                         Padding="8,6"
                                         Margin="0,0,5,0"
                                         Height="Auto"/>

                                <!-- Max Value TextBox -->
                                <TextBox Grid.Column="2"
                                         Text="{Binding MaxValue, UpdateSourceTrigger=PropertyChanged}"
                                         Foreground="{DynamicResource ThemeForeground}"
                                         Background="{DynamicResource ThemeTextBoxBackground}"
                                         BorderBrush="{DynamicResource ThemeBorderBrush}"
                                         Padding="8,6"
                                         Height="Auto"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Name="ApplyButton" 
                    Content="Apply" 
                    Click="ApplyButton_Click"
                    Background="{DynamicResource ThemeAccent}"
                    Foreground="{DynamicResource ThemeButtonForeground}"
                    Padding="15,8"
                    Margin="0,0,10,0"/>
            <Button Name="CancelButton" 
                    Content="Cancel" 
                    IsCancel="True"
                    Background="{DynamicResource ThemeWindowBackground}"
                    Foreground="{DynamicResource ThemeForeground}"
                    BorderBrush="{DynamicResource ThemeBorderBrush}"
                    BorderThickness="1"
                    Padding="15,8"/>
        </StackPanel>
    </Grid>
</Window>
